{
	"name": "vite-plugin-surrealkit",
	"version": "0.1.0",
	"description": "Vite plugin to run SurrealKit schema sync during dev/build",
	"license": "Unlicense",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"engines": {
		"node": ">=20.19.0"
	},
	"scripts": {
		"build": "tsup",
		"clean": "rm -rf dist",
		"typecheck": "tsc --noEmit"
	},
	"keywords": [
		"vite",
		"surrealdb",
		"surrealkit"
	],
	"peerDependencies": {
		"vite": "^7.0.0 || ^8.0.0"
	},
	"dependencies": {
		"@biomejs/biome": "^2.4.2",
		"picomatch": "^4.0.3"
	},
	"devDependencies": {
		"@types/node": "^24.3.0",
		"@types/picomatch": "^4.0.2",
		"tsup": "^8.2.4",
		"typescript": "^5.9.2",
		"vite": "^7.0.0"
	}
}
